/* pages/cartdetail/cartdetail.wxss */
.detail{
  width: 730rpx;
  display: grid;
  margin: 0rpx auto;
  margin-top: 40rpx;
  grid-template-columns: 300rpx 400rpx;
  grid-template-rows: 400rpx;
  justify-content: center;
  border-radius: 10rpx;
  padding: 10rpx 0rpx;
  background: linear-gradient(#48dbfb,#c8d6e5);
}
.img{
  width: 300rpx;
}
.img image{
  width: 300rpx;
  height: 400rpx;
}
.msg .name{
  margin-top: 10rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
  height: 100rpx;
  overflow: hidden
}
.msg .msg-item{
  margin-top: 20rpx;
  margin-left: 30rpx;
  overflow: hidden
}

.play-card{
  margin: 40rpx auto;
  padding: 20rpx 0rpx;
  width: 730rpx;
  min-height: 400rpx;
  border-radius: 10rpx;
  background: white;
}
.play-card::after{
  content: "";
  display: block;
  clear: both;
}
.play-card navigator{
  min-width: 100rpx;
  height: 60rpx;
  margin: 12rpx;
  margin-top: 15rpx;
  float: left;
  background: #48dbfb;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 15rpx;
  padding: 8rpx;
}